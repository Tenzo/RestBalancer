<web-app>
    <servlet>
        <servlet-name>SimpleLoadBalancer</servlet-name>
        <servlet-class>
            org.glassfish.jersey.servlet.ServletContainer
        </servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.classnames</param-name>
            <param-value>
                com.balancer.endpoint.UserGroup,
                com.balancer.handler.UserIdValidationExceptionMapper
            </param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>SimpleLoadBalancer</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>
